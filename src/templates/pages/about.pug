extends ../template

block variables
    -var title = 'Обо мне'
    - 
        var skillsList = [
            {
            skillsGroup: "Frontend", 
            skills: ["HTML5", "CSS3", "JavaScript & jQuery"]
            },
            {
            skillsGroup: "Backend", 
            skills: ["PHP", "MySQL", "Node.js & npm", "Mongo.db"]
            },
            {
            skillsGroup: "Workflow", 
            skills: ["Git", "Gulp", "Bower", "Webpack"]
            }
        ]
    -
        var contactsList = [
            {
            type: "skype", 
            contact: "humming-bird7"
            },
            {
            type: "email", 
            contact: "morozovaey@gmail.com"
            },
            {
            type: "phone", 
            contact: "+7(916)412-07-02"
            },
            {
            type: "address", 
            contact: "г. Москва, ул. Усиевича, д. 1"
            },          
        ]

block content
    .wrapper
        include ../common/header.pug
        main.main.main--about
            include ../common/hero.pug
            svg.triangles.triangles--about(xmlns="http://www.w3.org/2000/svg" viewbox="0 0 1200 105" preserveaspectratio="none")
                polygon.triangle__left(points="0,0 0,105 600,105")
                polygon.triangle__right(points="1200,0 1200,105 600,105")
            section.section.content.content--about
                .about
                    .about__content
                        .title__wrapper
                            h1.title.title--about Обо мне
                            svg.title__bg.title__bg--about
                                use(xlink:href="img/icons/symbol/sprite.svg#about_header")
                        .about__details
                            .about__photo
                                img.about__img(src='img/content/My_image.jpg')
                            h2.about__subtitle.subtitle Кто я
                            span.about__text.text
                                p Меня зовут Морозова Евгения. Я занимаюсь веб-разработкой — создаю сайты и помогаю хорошим компаниям развиваться, позиционировать себя и привлекать целевую аудиторию. В наше время сайт – это лицо и часть имиджа компании. И я за то, чтобы компании, создающие классные продукты и услуги имели достойный имидж, процветали и развивались. 
                                p Этот сайт я сделала в рамках обучения в Школе онлайн образования LoftSchool. Я люблю постоянно совершенствовать свои знания и навыки, создавать интересные технологичные современные сайты.
                .skills
                    .skills__content
                        h2.skills__subtitle.subtitle Чем я могу быть вам полезна
                        span.skills__text.text
                            p Меня очень привлекет Frontend разработка, а также я могу решать некоторые задачи на Backend. Мои знания и навыки лучше всего охарактеризуют небольшие диагаммы ниже.
                        ul.skills__list
                            each item in skillsList
                                li.skills__group #{item.skillsGroup}
                                    ul.skills__details
                                        each skill in item.skills
                                            li.skill 
                                                svg.skill__circle.circle(viewbox="0 0 110 110")
                                                    circle.circle__first(r="45" cx="50%" cy="50%")
                                                .skill__title #{skill}
            section.section.map
                .map__img
                .container
                    .contacts
                        .contacts__subtitle.subtitle
                            h2 Контакты
                        ul.contacts
                            each item in contactsList
                                li.contacts__item(class=`contacts__item--${item.type}`) #{item.contact}
        include ../common/footer.pug
